{
  "rules": {
    "shop": {
        ".read": true
    },
    "issues": {
        ".read": true
    },
    "customers": {
      "$user": {
        ".read":  "auth.uid == $user",
        "email": {
          ".read": "auth.uid == 'stripe-gateway'",
          ".write": "auth.uid == $user"
        },
        "stripeId": {
          ".write": "auth.uid == 'stripe-gateway'"
        }
      }
    },
    "permissions": {
      "$user": {
        ".read":  "auth.uid == $user",
        ".write": "auth.uid == 'stripe-gateway'"
      }
    },
    "content": {
      "$slug": {
        ".read":  "root.child('permissions').child(auth.uid).child($slug).child('valid').exists()"
      }
    },
    "purchases": {
      "queue": {
        ".read": "auth.uid == 'stripe-gateway'",
        "tasks" : {
          ".write": "auth != null",
          ".indexOn": "_state",
          "$taskId" : {
            ".read": "auth.uid == data.child('uid').val()"
          }
        }
      }
    }
  }
}
