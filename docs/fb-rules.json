{
  "rules": {
    "shop": {
        ".read": true
    },
    "issues": {
        ".read": true
    },
    "customers": {
      "$user": {
        ".read":  "$user == auth.uid",
        ".write": "$user == auth.uid"
      }
    },
    "permissions": {
      "$user": {
        ".read":  "$user == auth.uid"
      }
    },
    "content": {
      "$slug": {
        ".read":  "root.child('permissions').child(auth.uid).child($slug).child('valid').exists()"
      }
    }
  }
}